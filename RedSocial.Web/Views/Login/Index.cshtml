@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <title>Mi Red Social</title>
    <link rel="shortcut icon" href="~/Assets/favicon.ico" />
    <!-- META INFO -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="Una Red Social Para Programadores" />
    <meta name="generator" content="Hermes CMS" />

    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Assets/css/style.css" rel="stylesheet" />

    <script>
        function base_url(url) {
            return '@(Url.Content("~/"))' + url;
        }
        function redirect(href) {
            window.location.href = '@(Url.Content("~/"))' + href;
        }
    </script>
</head>
<body>

    <div class="container">
        <div class="page-header">
            <h1>Mi Red Social</h1>
            <p>La primera red social para programadores</p>
        </div>

        <div class="row">
            <div class="col-md-5">
                <h2>Ingresar</h2>
                <form>
                    <div class="form-group">
                        <label>Correo</label>
                        <input type="text" name="Correo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input type="password" name="Contrasena" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-default">Ingresar</button>
                </form>
            </div>

            <div class="col-md-7">
                <div class="well well-sm">
                    <h2>Registrarme</h2>
                </div>
            </div>
        </div>
    </div>

    <hr />
    <div class="text-center">Desarrollado por <b>Antonio Silva</b></div>
</body>
</html>